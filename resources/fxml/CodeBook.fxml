<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.restaurant.controllers.CodeBookController">
    <left>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    prefHeight="600.0" prefWidth="105.0" styleClass="navigation-bar-second"
                    stylesheets="@../css/style.css" translateX="3.0" BorderPane.alignment="CENTER">
            <children>
                <VBox layoutX="2.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="520.0" prefWidth="100.0" spacing="80.0" translateY="40.0">
                    <children>
                        <Button fx:id="foodCategoryButton" alignment="CENTER" contentDisplay="TOP" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#foodCategory" prefHeight="86.0" prefWidth="100.0"
                                styleClass="navigation-bar-button" stylesheets="@../css/style.css" text="Food Category"
                                textAlignment="CENTER">
                            <font>
                                <Font name="Segoe UI Semibold" size="12.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/food-type.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="manufacturerButton" alignment="CENTER" contentDisplay="TOP" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#manufacturer" prefHeight="86.0" prefWidth="100.0"
                                styleClass="navigation-bar-button" stylesheets="@../css/style.css" text="Manufacturer"
                                textAlignment="CENTER">
                            <font>
                                <Font name="Segoe UI Semibold" size="12.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/manufacturer.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="drinkCategoryButton" alignment="CENTER" contentDisplay="TOP"
                                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false" onAction="#drinkCategory" prefHeight="86.0" prefWidth="100.0"
                                styleClass="navigation-bar-button" stylesheets="@../css/style.css" text="Drink Category"
                                textAlignment="CENTER">
                            <font>
                                <Font name="Segoe UI Semibold" size="12.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/drink-type.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="50.0"/>
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </left>
</BorderPane>
